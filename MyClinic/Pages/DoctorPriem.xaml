<Page x:Class="MyClinic.Pages.DoctorPriem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DoctorPriem">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>


            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView Grid.RowSpan="4"
                  Grid.Column="0"
                  Grid.Row="2"
                  Grid.ColumnSpan="5"
                  Name="DoctorsLv"
                  ItemsSource="{Binding receptions}">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Id Приема " Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Id}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Id" Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Id}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Дата приема" Width="110">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Date_admission, StringFormat=dd.MM.yyyy}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Кличка" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Animals.clinic}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Коментарий" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Comment}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox
            Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Height="40"
                 Width="200"
                 Name="TicketSearchTb"
                 VerticalAlignment="Bottom"
            Padding="0 0 5 0 "
                Margin="10" TextChanged="TicketSearchTb_TextChanged" Grid.Row="1" />
        <TextBlock Text="Поиск животного по кличке"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Padding=" 0 0 5 0"
                   Margin=" 10 10 0 0"/>
        <TextBlock Text="Фильтрация по дате"
            Grid.Column="4"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Margin=" 0 0 0 5"/>
        <ComboBox Name="FiltrDate"
                  ItemsSource="{Binding receptions}"
                 SelectionChanged="FiltrDate_SelectionChanged"
                  Grid.Column="4"
                  Grid.Row="1"
                  Grid.ColumnSpan="2"
                  Margin="10">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding StringFormat=dd.MM.yyyy}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <!-- Кнопка сброса фильтра -->
        <Button Content="Сбросить фильтр"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Margin="10,10,10,10"
            Click="ResetFilter_Click" Grid.Row="1"/>
        <Button x:Name="AddPriem"
                Content="Создать новый прием"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="10"
                Grid.Row="7" Click="AddPriem_Click"
             />
        <Button x:Name="UpPriem"
          Content="обновить список приемов"
          Grid.Column="0"
          Grid.ColumnSpan="2"
          Margin="10"
          Grid.Row="8" Click="UpdatePriem_Click"
       />

        <Button x:Name="DPriem"
    Content="Восстановить прием"
    Grid.Column="3"
    Grid.ColumnSpan="1"
    Margin="10,5,10,15"
    Grid.Row="7" Click="DPriem_Click" 
 />
        <Button x:Name="Upriem"
   Content="Удалить прием"
   Grid.Column="2"
   Grid.ColumnSpan="1"
   Margin="10,5,10,15"
   Grid.Row="7" Click="Upriem_Click" 
/>
    </Grid>
</Page>
