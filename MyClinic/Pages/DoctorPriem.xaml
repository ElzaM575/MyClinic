<Page x:Class="MyClinic.Pages.DoctorPriem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DoctorPriem">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
           
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#B0E0E6" Padding="10" Grid.ColumnSpan="2" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="doctorInfoTb" 
                       Foreground="White"
                       FontSize="15"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ListView Grid.RowSpan="6"
                  Grid.Column="0"
                  Grid.Row="3"
                  Grid.ColumnSpan="4"
                  Name="DoctorsLv"
                  ItemsSource="{Binding receptions}">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Id Приема " Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Id}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Id" Width="70">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Id}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Дата приема" Width="110">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Date_admission, StringFormat=dd.MM.yyyy}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Кличка" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Animals.clinic}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Коментарий" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Comment}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
       
       
        <TextBlock Text="Фильтрация по дате"
            Grid.Column="4"
                   FontSize="15"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Margin=" 0 0 0 5"/>
        <ComboBox Name="FiltrDate"
                  ItemsSource="{Binding receptions}"
                 SelectionChanged="FiltrDate_SelectionChanged"
                  Grid.Column="4"
                  Grid.Row="1"
                  Grid.ColumnSpan="2"
                  Margin="10">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding StringFormat=dd.MM.yyyy}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <!-- Кнопка сброса фильтра -->
        <Button Content="Сбросить фильтр"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Margin="5"
              Background="#B0E0E6"
            Click="ResetFilter_Click" Grid.Row="1"/>
        <Button x:Name="AddPriem"
                Content="Создать новый прием"
                Grid.Column="4"
                Height="25"
                Background="#F0F8FF"
                Margin="5"
                Grid.Row="4" Click="AddPriem_Click"
             />
        <Button x:Name="GivPriem"
         Content="Список животных"
         Grid.Column="4"
         Height="25"
         Background="#F0F8FF"
         Margin="5"
         Grid.Row="3" Click="GivPriem_Click" 
      />
        <Button x:Name="UpPriem"
          Content="обновить приемы"
          Grid.Column="4"
          Grid.ColumnSpan="1"
          Margin="5"
                 Background="#F0F8FF"
          Grid.Row="8" Click="UpdatePriem_Click"
       />
       
        <Button x:Name="RedPriem"
    Content="Редактировать прием"
    Grid.Column="4"
    Grid.ColumnSpan="1"
    Margin="5"
                 Background="#F0F8FF"
    Grid.Row="7" Click="RedPriem_Click_1"
 />
        <Button x:Name="Upriem"
   Content="Удалить прием"
   Grid.Column="4"
   Grid.ColumnSpan="1"
   Margin="5"
                 Background="#F0F8FF"
   Grid.Row="6" Click="Upriem_Click" 
/>
        <Button x:Name="Vh"
   Content="выход"
   Grid.Column="0"
   Grid.ColumnSpan="1"
   Margin="5"
   Grid.Row="9" Click="Vh_Click"
/>
    </Grid>
</Page>
