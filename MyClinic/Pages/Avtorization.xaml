<Page x:Class="MyClinic.Pages.Avtorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyClinic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация" >

    <Grid Background="#FFE8F5E9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Ветеринарная клиника" 
                   Grid.Column="1"
                   Grid.Row="1"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,30"
                   Foreground="#FF2E7D32"/>

        <!-- Панель авторизации -->
        <Border Grid.Column="1" Grid.Row="2" 
                Background="White"
                CornerRadius="10"
                Padding="30"
                BorderBrush="#FFBDBDBD"
                BorderThickness="1"
                MinWidth="350">
            <StackPanel>
                <TextBlock Text="Вход для врачей"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Логин (ID врача)"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="loginTb"
                         FontSize="16"
                         Padding="5"
                         PreviewTextInput="NumberValidationTextBox"/>

                <TextBlock Text="Пароль"
                           Margin="0,15,0,5"/>
                <PasswordBox x:Name="passwordTb"
                             FontSize="16"
                             Padding="5"/>
                <Button x:Name="loginBtn"
                        Content="Войти"
                        Margin="0,20,0,0"
                        Padding="10,5"
                        Background="#FF2E7D32"
                        Foreground="White"
                        FontSize="16" Click="loginBtn_Click"/>

                <TextBlock x:Name="errorTb"
                           Foreground="Red"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
