<Window x:Class="MyClinic.Windows.AddPriem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyClinic.Windows"
        mc:Ignorable="d"
        Title="AddPriem" Height="450" Width="800" Background="#CCCCFF">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Дата приема"
            Grid.ColumnSpan="1"
            Grid.Row="0"
            FontSize="20"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0 0 5 0"/>
        <Label Content="Кличка" Grid.Column="0"
      FontSize="18"
      VerticalAlignment="Top"
      HorizontalAlignment="Right"
      Margin="0,48,101,0" Grid.RowSpan="2"/>
        <DatePicker x:Name="DateDp"
                 Grid.Column="1"
                 Grid.Row="0"
                 Grid.ColumnSpan="2"
                 Height="35"
                 Width="400"/>
        <ComboBox Grid.Row="1"
                  Grid.Column="0"
           
           Width="559"
           FontSize="16"
                 
           HorizontalAlignment="Left"
           Margin="30,20,0,2"
           Height="40"
           ItemsSource="{Binding animals}"
           Name="ClCm" Grid.ColumnSpan="3">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding clinic}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text="Коментарий"
Grid.Row="2"
FontSize="18"
VerticalAlignment="Top"
HorizontalAlignment="Right"
Margin="0,10,68,0"/>
        <TextBox x:Name="KomTb"
    Grid.Row="2"
    Grid.ColumnSpan="3"
    Height="60" Margin="31,39,10,50" Grid.RowSpan="2"/>
        <Button x:Name="SavePriemBtn"
                Content="Добавить прием"
              Margin="10"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Grid.Row="7"
                 Background="#F0F8FF"
                FontSize="18" Click="SavePriemBtn_Click"/>
        <Button x:Name="AddClBtn"
         Content="Добавить животное"
       Margin="142,10,39,10"
         Grid.Column="0"
          Background="#F0F8FF"
         Grid.Row="4"
                 
         FontSize="18" Click="AddClBtn_Click" Grid.ColumnSpan="2" />
        <Button x:Name="UddClBtn"
  Content="Обновить"
Margin="35,10,146,10"
  Grid.Column="2"
   Background="#F0F8FF"
  Grid.Row="4"
  FontSize="18" Click="UddClBtn_Click" Grid.ColumnSpan="2" />
    </Grid>
</Window>
