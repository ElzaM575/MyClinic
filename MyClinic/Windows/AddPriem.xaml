<Window x:Class="MyClinic.Windows.AddPriem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyClinic.Windows"
        mc:Ignorable="d"
        Title="AddPriem" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>

            <RowDefinition/>
            <RowDefinition/>


            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Дата приема"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            FontSize="18"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0 0 5 0"/>
        <TextBlock Text="Кличка"
      Grid.ColumnSpan="2"
      Grid.Row="1"
      FontSize="18"
      VerticalAlignment="Center"
      HorizontalAlignment="Right"
      Margin="0 0 5 0"/>
        <DatePicker x:Name="DateDp"
                 Grid.Column="2"
                 Grid.Row="0"
                 Grid.ColumnSpan="2"
                 Height="35"
                 Width="200"/>
        <ComboBox Grid.Row="1"
                  Grid.ColumnSpan="2"
                  Width="200"
                  FontSize="16"
                  Grid.Column="2"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left"
                  Margin="86,0,0,0"
                  Height="40"
                  ItemsSource="{Binding animalsList}"
                  Name="AuthorCm" SelectionChanged="AuthorCm_SelectionChanged"/>
        <TextBlock Text="Коментарий"
Grid.ColumnSpan="2"
Grid.Row="2"
FontSize="18"
VerticalAlignment="Center"
HorizontalAlignment="Right"
Margin="0 0 5 0"/>
        <TextBox x:Name="KomTb"
    Grid.Column="2"
    Grid.Row="2"
    Grid.ColumnSpan="2"
    Height="35"
    Width="200"/>
        <Button x:Name="SavePriemBtn"
                Content="Добавить прием"
              Margin=" 30"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Grid.Row="7"
                FontSize="18" Click="SavePriemBtn_Click"/>
        <Button x:Name="AddClBtn"
         Content="добавить жиотное"
       Margin=" 30"
                
         Grid.Column="0"
         
         Grid.Row="1"
         FontSize="18" Click="AddClBtn_Click" />
    </Grid>
</Window>
