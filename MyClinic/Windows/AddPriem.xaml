<Window x:Class="MyClinic.Windows.AddPriem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyClinic.Windows"
        mc:Ignorable="d"
        Title="AddPriem" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TextBlock Text="Фамилия"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            FontSize="18"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0 0 5 0"/>
        <TextBlock Text="Имя"
            Grid.ColumnSpan="2"
            Grid.Row="1"
            FontSize="18"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0 0 5 0"/>
        <TextBlock Text="Отчество"
            Grid.ColumnSpan="2"
            Grid.Row="2"
            FontSize="18"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0 0 5 0"/>
        <TextBlock Text="Дата приема"
            Grid.ColumnSpan="2"
            Grid.Row="3"
            FontSize="18"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0 0 5 0"/>
        <TextBlock Text="Животное"
      Grid.ColumnSpan="2"
      Grid.Row="4"
      FontSize="18"
      VerticalAlignment="Center"
      HorizontalAlignment="Right"
      Margin="0 0 5 0"/>

        <TextBox x:Name="FamTb"
          Grid.Column="2"
          Grid.Row="0"
          Grid.ColumnSpan="2"
          Height="35"
          Width="200"/>
        <TextBox x:Name="NameTb"
          Grid.Column="2"
          Grid.Row="1"
          Grid.ColumnSpan="2"
          Height="35"
          Width="200"/>
        <TextBox x:Name="PatranTb"
          Grid.Column="2"
          Grid.Row="2"
          Grid.ColumnSpan="2"
          Height="35"
          Width="200"/>
        <DatePicker x:Name="DateDp"
                 Grid.Column="2"
                 Grid.Row="3"
                 Grid.ColumnSpan="2"
                 Height="35"
                 Width="200"/>
        <TextBox x:Name="VesTb"
          Grid.Column="2"
          Grid.Row="4"
          Grid.ColumnSpan="2"
          Height="35"
          Width="200"/>
        <TextBlock Text="Коментарий"
Grid.ColumnSpan="2"
Grid.Row="5"
FontSize="18"
VerticalAlignment="Center"
HorizontalAlignment="Right"
Margin="0 0 5 0"/>
        <TextBox x:Name="KomTb"
    Grid.Column="2"
    Grid.Row="5"
    Grid.ColumnSpan="2"
    Height="35"
    Width="200"/>
        <Button x:Name="SavePriemBtn"
                Content="Добавить прием"
              
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Grid.Row="7"
                FontSize="18" Click="SavePriemBtn_Click"/>
    </Grid>
</Window>
